@rendermode InteractiveServer
@inject CartService CartService

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h6>@MenuItem.Name</h6>
                <p class="text-muted small">@MenuItem.Description</p>
                <p class="text-success fw-bold">@MenuItem.Price.ToString("C")</p>
            </div>
            <div class="col-4">
                @if (!string.IsNullOrEmpty(MenuItem.ImageUrl))
                {
                    <img src="@MenuItem.ImageUrl" class="img-fluid rounded mb-2" style="height: 80px; object-fit: cover;" alt="@MenuItem.Name" />
                }
                <div class="input-group input-group-sm">
                    <button class="btn btn-outline-secondary" @onclick="DecreaseQuantity" disabled="@(quantity <= 0)">-</button>
                    <input type="number" class="form-control text-center" @bind="quantity" min="0" max="50" />
                    <button class="btn btn-outline-secondary" @onclick="IncreaseQuantity">+</button>
                </div>
                @if (quantity > 0)
                {
                    <button class="btn btn-primary btn-sm w-100 mt-1" @onclick="AddToCart">
                        Add to Cart
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public MenuItemDto MenuItem { get; set; } = null!;
    [Parameter] public int RestaurantId { get; set; }
    [Parameter] public string RestaurantName { get; set; } = string.Empty;

    private int quantity = 0;

    private void IncreaseQuantity() => quantity++;
    private void DecreaseQuantity() => quantity = Math.Max(0, quantity - 1);

    private void AddToCart()
    {
        if (quantity > 0)
        {
            CartService.AddItem(RestaurantId, RestaurantName, MenuItem, quantity);
            quantity = 0;
        }
    }
}